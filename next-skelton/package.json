{
  "name": "next-skelton",
  "description": "``` yarn add next react react-dom ```",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "babel-jest": "^25.2.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "stylelint": "13.2.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "yarn lint:tslint; yarn lint:stylelint",
    "lint:tslint": "tslint --project ./ --fix '{src,pages,__test__}/**/*.{ts,tsx}'",
    "lint:stylelint": "stylelint '{src,pages}/**/*.css' --fix",
    "lint-check": "yarn lint-check:tslint; yarn lint-check:stylelint",
    "lint-check:tslint": "tslint-config-prettier-check ./tslint.json",
    "lint-check:stylelint": "stylelint-config-prettier-check",
    "test": "jest --watchAll --verbose"
  },
  "author": "Artree-Technology",
  "license": "ISC",
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "next": "^9.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "extends": [
      "stylelint-config-idiomatic-order",
      "stylelint-config-prettier",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        true,
        {
          "singleQuote": true,
          "indentation": 2
        }
      ]
    }
  }
}
