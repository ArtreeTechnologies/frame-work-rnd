{
  "name": "next-skelton",
  "description": "``` yarn add next react react-dom ```",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "babel-jest": "^25.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "tslint --project ./ --fix '{components,lib,pages,__test__}/**/*.{ts,tsx}'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "jest --watchAll --verbose"
  },
  "author": "Artree-Technology",
  "license": "ISC",
  "dependencies": {
    "next": "^9.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --project ./ --fix '{components,lib,pages,__test__}/**/*.{ts,tsx}'"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.css": [
      "prettier-stylelint --write"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false
  }
}
